<h1>Listing Messages</h1>

<%= paginate @admin_messages %>
<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Title</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @admin_messages.each do |admin_message| %>
      <tr>
        <td><%= admin_message.email %></td>
        <td><%= admin_message.title %></td>
        <td><%= link_to 'Edit', edit_admin_message_path(admin_message), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', admin_message_path(admin_message), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @admin_messages %>
